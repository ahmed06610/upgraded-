
@using (Html.BeginForm("Index", "Courses"))
{
    <div class="navbar-nav navbar-left">
        <input style="z-index:30;" type="text" name="SearchString" id="searchInput" class="col-form-label-sm" placeholder="Search">
        <input type="submit" value="Filter" class="btn-info" width="20" />
    </div>
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.js"></script>

<style>
    #searchInput {
        position: relative;
        z-index: 10000;
    }

    .ui-autocomplete {
        z-index: 9999 !important;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchInput").autocomplete({
            minLength:2,
            source: function (request, response) {
                $.ajax({
                   url: '@Url.Action("GetSearchValue","Courses")',
                    type: "POST",
                    dataType: "json",
                    data: { search: $("#searchInput").val() },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return { label: item.Title, value: item.Title };
                        }))

                    }
                })
            },
            messages: {
                noResults: "", results: ""
            }
        });
    })
</script>